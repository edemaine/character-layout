body
  background: black
  color: white
a
  color: yellow
.drag
  background: #333

input
  vertical-align: middle
  &[type="number"]
    width: 3rem
  &[type="range"]
    width: 5rem
    color: #ccc
label
  margin-right: 0.2rem
.group
  display: inline-block
  margin-right: 1rem
.boxId
  display: inline-block
  margin-inline: 1rem
  font-weight: bold
.actual
  margin-left: 0.25rem
  color: red

svg
  margin-top: 1rem
  background: white
image:hover
  filter: sepia(1) !important

.prototypes
  margin-bottom: 1rem
  border: double 5px
  padding: 0.75rem
  background: #222
  cursor: default
  &:hover
    background: #333
  .draghere
    font-size: x-large
    margin-bottom: 0.5rem
div.prototype
  display: inline-flex
  align-items: center
  > input[type="range"]
    height: 110px
    margin-inline: 0
  margin-right: 0.5rem
img.prototype
  align-self: flex-end
  margin: 0.1rem
  border: dashed orange
  &.active
    border: solid rgb(154, 255, 154)
.freq
  display: flex
  flex-direction: column
  align-items: center
  > button
    padding: 0px
    margin-block: 1px

// https://stackoverflow.com/a/15935838/7797661
input[type=range].vertical
  writing-mode: vertical-lr
  direction: rtl
  appearance: slider-vertical
  width: 16px
  vertical-align: bottom
